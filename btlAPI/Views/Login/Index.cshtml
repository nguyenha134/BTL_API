
@{

    Layout = null;
    if (Session["User"] != null)
    {
        Response.Redirect("~/Admins/Index");

    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS -->
    @Styles.Render("~/Content/bootstrap-reboot.min.css")
    @Styles.Render("~/Content/bootstrap-grid.min.css")
    @Styles.Render("~/Content/bootstrap.min.css")

    @Styles.Render("~/Content/Data/magnific-popup.css")
    @Styles.Render("~/Content/Data/select2.min.css")
    @Styles.Render("~/Content/Data/admin.css")
    @Styles.Render("~/Content/Data/style.css")

    <script type="text/javascript">function valid() {
if (document.getElementById("ID").value == "") {
alert("Vui lòng nhập User!");
return false;
}
if (document.getElementById("Pass").value == "") {
alert("Vui lòng nhập Pass!");
return false;
}
return true;
}</script>
    <!-- Favicons -->
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title>Login</title>

</head>
<body>
    <div class="sign section--bg" style=" background: url(@Url.Content("~/Ảnh/banner.jpg")) center center / cover no-repeat">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="sign__content" id="login" onsubmit="return valid()">
                        <!-- authorization form -->
                        @using (Html.BeginForm("Login", "Login"))
                        {
                            <div class="sign__form">
                                @Html.AntiForgeryToken()
                                <p class="sign__logo" id="Title_Form">
                                    THIẾT BỊ Y TẾ
                                </p>
                                <p>@ViewBag.Thongbao</p>

                                <div class="sign__group">
                                    <input id="ID" type="text" name="name" class="sign__input" placeholder="Tên đăng nhập" required name="TenDangNhap">
                                </div>

                                <div class="sign__group">
                                    <input id="Pass" type="password" name="pass" class="sign__input" placeholder="Mật khẩu" required name="MatKhau">
                                </div>

                                @*<div class="text-left text-danger w-100 p-2" style="min-height:40px">@TempData["Err"]</div>*@

                                <div class="sign__group sign__group--checkbox">
                                    <input id="Remeber" name="remember" type="checkbox">
                                    <label for="Remeber">Remember me</label>
                                </div>
                                <input name="login " type="submit" value="Login" class="sign__btn" />
                                <span class="sign__text">Forgot password?</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>